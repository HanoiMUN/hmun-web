{
  "scripts": {
    "clean": "rm -rf ./public",
    "format": "npx rustywind --write .",
    "postcss": "npx postcss ./css/*.css -d ./public",
    "postcss-watch": "npx postcss ./css/*.css -d ./public -w",
    "build": "npx zola-bin build && npm run postcss",
    "serve": "npx zola-bin serve -O",
    "dev": "npm run postcss-watch & npm run serve"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-extend": "^1.0.5",
    "rustywind": "^0.21.0",
    "tailwindcss": "^3.4.1",
    "zola-bin": "^0.3.7"
  }
}

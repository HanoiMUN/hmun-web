{
  "scripts": {
    "clean": "run-script-os",
    "clean:darwin:linux": "rm -rf ./public",
    "clean:win32": "rmdir /s .\\public",
    "tailwind": "run-script-os",
    "tailwind:darwin:linux": "npx tailwindcss -i ./sass/input.scss -o ./public/style.css -m",
    "tailwind:win32": "npx tailwindcss -i .\\sass\\input.scss -o .\\public\\style.css -m",
    "tailwind-watch": "run-script-os",
    "tailwind-watch:darwin:linux": "npx tailwindcss -i ./sass/input.scss -o ./public/style.css -mw",
    "tailwind-watch:win32": "npx tailwindcss -i .\\sass\\input.scss -o .\\public\\style.css -mw",
    "format": "npx rustywind --write .",
    "build": "run-script-os",
    "build:darwin:linux": "npx zola-bin build && npm run tailwind",
    "build:win32": "npx zola-bin build & npm run tailwind",
    "serve": "npx zola-bin serve --open",
    "dev": "run-script-os",
    "dev:darwin:linux": "npm run serve & npm run tailwind-watch",
    "dev:win32": "start /b npm run serve & start /b npm run tailwind-watch"
  },
  "devDependencies": {
    "run-script-os": "^1.1.6",
    "rustywind": "^0.21.0",
    "tailwindcss": "^3.4.1",
    "zola-bin": "^0.3.7"
  }
}
